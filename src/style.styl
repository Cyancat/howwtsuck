*
  color: #333
  box-sizing: border-box

img
  width: 100%

blockquote
  background-color: #f1f1f1
  margin-left: 0
  padding: 1px 10px

.secondary-text
  color: #999
  font-size: 12px

.container
  margin-left: 20px

.ws-task-status-container
  padding: 0 20px

.ws-title-container
  padding: 0 20px 20px

.ws-issue-container
.ws-comments-container
  padding: 20px

.ws-task-status
  padding: 5px 10px
  float: left
  &.ws-task-status-progress
    background-color: #FFD889
  &.ws-task-status-fin
    background-color: #C3EEEE
  &.ws-task-status-archived
    background-color: #FFE9E9
  &.ws-task-status-deleted
    background-color: #DB9797
    color: #fff

.ws-task-project
  float: left
  padding: 5px 10px
  background-color: #B3C4C3

.ws-task-meta
  float: left
  margin-right: 20px
  label
    font-weight: bold

.ws-title-meta
  font-size: 14px
  margin-left: 10px

.ws-comments-container
  border-left: 1px solid #ccc

.ws-comment
  margin-bottom: 30px

.ws-comment-time
  margin-left: 5px

.ws-comment-content
  margin-top: 5px
  > p
    margin: 5px 0

.ws-content-user
  color: #91D6D5

.ws-content-tasklink
  color: #F9A5A1
  &:hover
    color: #A23607
